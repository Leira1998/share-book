<div class="group-header">
  <h1>Books</h1>
</div>

<!-- Index of Books -->
<div class="row">
<% @books.each do |book| %>
  <div class="col-md-4">
  <%= link_to book_path(book) do %>
    <div class="doc">
      <%= image_tag(book.document.url, alt: "Document", class: 'doc-thumb') %>
      <br />
      <p class="doc-title"><%= book.title %></p>
      <p class="doc-class"><%= book.classname %></p>
    </div>
  <% end %>
  </div>
<% end %>

  <!-- Link to new Book -->
  <div class="col-md-4">
    <div class="doc">
    <%= link_to new_book_path do %>
      <div class="new-doc">
        <span class="glyphicon glyphicon-plus-sign"></span>
        <p>
          Upload a document
        </p>
      </div>
    <% end %>
    </div>
  </div>
</div>

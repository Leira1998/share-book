<div class="group-header">
  <h1>Upload a Book</h1>
</div>

<!-- New Document Form -->
<%= form_for(@book) do |f| %>
  <%= render 'shared/errors', object: @book %>

  <div class="form-group">
    <%= f.label :document %>
    <%= f.file_field :document %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :classname %>
    <%= f.text_field :classname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :edition %>
    <%= f.text_field :edition, class: "form-control", onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' %>
  </div>

  <%= f.submit 'Upload', class: "btn btn-primary" %>


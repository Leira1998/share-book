<div class="page-header">
  <h1>Results for query</h1>
</div>
<div class="row">
<%= @books.each do |b| %>
<div class="col-md-6">
  <div class="doc-show">
    <%= image_tag(b.document.url, alt: "Document")  %>
  </div>
</div>
<div class="col-md-6">
  <div class="doc-info">
    <p>Author: <%= b.author %></p>
    <p>Class: <%= b.classname %></p>
    <p>Edition: <%= b.edition %></p>
  </div>
</div>
<% end %>
</div>

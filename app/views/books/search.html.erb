<div class="page-header">
  <h1>Results for "<%= params[:query] %>"</h1>
</div>
<div class="row">
<% @books.each do |book| %>
  <div class="col-md-4">
  <%= link_to book_path(book) do %>
    <div class="doc">
      <%= image_tag(book.document.url, alt: "Document", class: 'doc-thumb') %>
      <br />
      <p class="doc-title"><%= book.title %></p>
    </div>
  <% end %>
</div>
<% end %>
</div>

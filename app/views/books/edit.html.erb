<div class="page-header">
  <h1>Edit a Book</h1>
</div>

<%= form_for(@book) do |f| %>
  <%= render 'shared/errors', object: @book %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= f.submit 'Update', class: "btn btn-primary" %>
<% end %>
